{
  "*.{ts,tsx}": [
    "bash -c 'echo \"Checking TypeScript for:\" $0'",
    "bash -c 'NODE_OPTIONS=\"--max-old-space-size=4096\" tsc --noEmit --skipLibCheck --incremental --tsBuildInfoFile .tsbuildinfo.precommit || (rm -f .tsbuildinfo.precommit && exit 1)'"
  ],
  "*.{js,jsx,ts,tsx,json,md}": [
    "prettier --write --cache --cache-location .prettier-cache"
  ],
  "*.{ts,tsx,js,jsx}": [
    "eslint --fix --cache --cache-location .eslintcache --max-warnings 100"
  ],
  "*": ["tsx scripts/check-secrets.ts"]
}
