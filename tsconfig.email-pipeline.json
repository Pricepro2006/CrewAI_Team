{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    // Core email pipeline files only
    "src/core/processors/EmailQueueProcessor.ts",
    "src/services/email/**/*.ts",
    "src/services/EmailStorageService.ts",
    "src/services/EmailProcessingService.ts",
    "src/services/LLMService.ts",
    "src/services/OllamaService.ts",
    "src/services/QueueService.ts",
    "src/services/PipelineJsonParser.ts",
    "src/adapters/PipelineAnalysisAdapter.ts",
    "src/types/email*.ts",
    "src/types/pipeline*.ts",
    "src/types/analysis*.ts",
    "src/types/EmailTypes.ts",
    "src/utils/logger.ts",
    "src/utils/AsyncStreamProcessor.ts",
    "src/monitoring/EmailMetrics.ts",
    "src/database/schema.ts",
    "src/database/connection.ts",
    "src/database/migrations/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/client/**/*",
    "src/api/**/*",
    "src/server.ts",
    "src/utils/password.ts",
    "src/services/AgentService.ts",
    "src/services/TaskService.ts",
    "src/services/UserService.ts",
    "src/services/RAGService.ts",
    "src/services/WebSearchService.ts",
    "src/services/BusinessSearchService.ts"
  ]
}