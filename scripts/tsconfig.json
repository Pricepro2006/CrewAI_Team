{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "../dist/scripts",
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/database/security/sql-injection-validator.ts",
    "../src/utils/logger.ts",
    "../src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}