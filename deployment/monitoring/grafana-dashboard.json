{
  "dashboard": {
    "title": "Email Dashboard - Production Monitoring",
    "description": "2025 Best Practice: Comprehensive monitoring dashboard for Email Dashboard application",
    "tags": ["email-dashboard", "production", "tdsynnex"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{app=\"email-dashboard\"}[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate %",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "100 * sum(rate(http_requests_total{app=\"email-dashboard\", status=~\"5..\"}[5m])) / sum(rate(http_requests_total{app=\"email-dashboard\"}[5m]))",
            "legendFormat": "Error Rate"
          }
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_bucket{app=\"email-dashboard\"}[5m])) by (le)",
            "format": "heatmap"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active WebSocket Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "email_dashboard_websocket_connections{app=\"email-dashboard\"}",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Email Processing Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(email_processing_duration_seconds_bucket{app=\"email-dashboard\"}[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(email_processing_duration_seconds_bucket{app=\"email-dashboard\"}[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "email_dashboard_db_pool_available{app=\"email-dashboard\"}",
            "legendFormat": "Available"
          },
          {
            "expr": "email_dashboard_db_pool_waiting{app=\"email-dashboard\"}",
            "legendFormat": "Waiting"
          },
          {
            "expr": "email_dashboard_db_pool_size{app=\"email-dashboard\"}",
            "legendFormat": "Total Size"
          }
        ]
      },
      {
        "id": 7,
        "title": "CPU & Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"email-dashboard-.*\"}[5m])) by (pod)",
            "legendFormat": "CPU: {{pod}}"
          },
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"email-dashboard-.*\"}) by (pod) / 1024 / 1024 / 1024",
            "legendFormat": "Memory (GB): {{pod}}",
            "yAxisID": 2
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Hit Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "100 * sum(rate(email_dashboard_cache_hits_total[5m])) / sum(rate(email_dashboard_cache_requests_total[5m]))",
            "legendFormat": "Hit Rate %"
          }
        ]
      },
      {
        "id": 9,
        "title": "SLA Compliance",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "email_dashboard_sla_compliance_percent",
            "legendFormat": "SLA %"
          }
        ],
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"color": "red", "value": null},
            {"color": "yellow", "value": 95},
            {"color": "green", "value": 99}
          ]
        }
      },
      {
        "id": 10,
        "title": "Email Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "sum(email_dashboard_email_count) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "System Alerts",
        "type": "alertlist",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "options": {
          "showOptions": "current",
          "maxItems": 10,
          "sortOrder": "3",
          "dashboardFilter": "",
          "alertName": "",
          "dashboardTitle": "",
          "tags": ["email-dashboard"]
        }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}