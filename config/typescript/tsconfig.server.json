{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "../../dist",
    "rootDir": "../../src",
    "noEmit": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "lib": ["ES2022"],
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "../../src/api/**/*",
    "../../src/core/**/*",
    "../../src/config/**/*",
    "../../src/utils/**/*",
    "../../src/shared/**/*",
    "../../src/database/**/*",
    "../../src/monitoring/**/*",
    "../../src/middleware/**/*",
    "../../src/types/**/*"
  ],
  "exclude": [
    "src/ui/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test/**/*",
    "**/tests/**/*",
    "**/__tests__/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}