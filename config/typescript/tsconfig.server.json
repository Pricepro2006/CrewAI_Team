{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "../../dist",
    "rootDir": "../../src",
    "noEmit": false,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "lib": ["ES2022"],
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    },
    "moduleDetection": "force",
    "verbatimModuleSyntax": false
  },
  "include": [
    "../../src/api/**/*",
    "../../src/core/**/*",
    "../../src/config/**/*",
    "../../src/utils/**/*",
    "../../src/shared/**/*",
    "../../src/database/**/*",
    "../../src/monitoring/**/*",
    "../../src/middleware/**/*",
    "../../src/types/**/*"
  ],
  "exclude": [
    "../../src/ui/**/*",
    "../../node_modules",
    "../../dist",
    "../../**/*.test.ts",
    "../../**/*.test.tsx",
    "../../**/*.spec.ts",
    "../../**/*.spec.tsx",
    "../../**/test/**/*",
    "../../**/tests/**/*",
    "../../**/__tests__/**/*",
    "../../src/test/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}