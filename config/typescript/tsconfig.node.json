{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "../../dist",
    "rootDir": "../../src",
    "types": ["node"],
    "lib": ["ES2022"],
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["*"],
      "@core/*": ["core/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext",
      "allowImportingTsExtensions": false
    }
  },
  "include": [
    "../../src/**/*"
  ],
  "exclude": [
    "../../node_modules",
    "../../dist",
    "../../**/*.test.ts",
    "../../**/*.spec.ts"
  ]
}