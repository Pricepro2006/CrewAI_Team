#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run build to ensure no compilation errors
echo "🔨 Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Please fix the build errors before pushing."
  exit 1
fi

# Run integration tests
echo "🧪 Running integration tests..."
npm run test:integration
if [ $? -ne 0 ]; then
  echo "❌ Integration tests failed. Please fix the failing tests before pushing."
  exit 1
fi

# Run security audit
echo "🔒 Running security audit..."
npm audit --audit-level moderate
if [ $? -ne 0 ]; then
  echo "⚠️  Security vulnerabilities detected. Consider running 'npm audit fix' to resolve them."
  # Don't exit with error for security audit, just warn
fi

echo "✅ All pre-push checks passed!"