{
  "dashboard": {
    "id": null,
    "title": "Walmart Grocery Agent Microservices",
    "tags": ["walmart", "microservices", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"walmart-services\"}",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "max": 100,
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Service-Specific Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"walmart-services\"}",
            "legendFormat": "{{instance}} Memory",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bytes"
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Request Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"walmart-services\"}[5m])",
            "legendFormat": "{{instance}} - {{method}} {{status_code}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "title": "HTTP Response Times",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"walmart-services\"}[5m]))",
            "legendFormat": "{{instance}} - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"walmart-services\"}[5m]))",
            "legendFormat": "{{instance}} - 50th percentile",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "Redis Connection Pool",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients",
            "refId": "A"
          },
          {
            "expr": "redis_blocked_clients",
            "legendFormat": "Blocked Clients",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "title": "Queue Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "queue_jobs_waiting{service=\"walmart-nlp-queue\"}",
            "legendFormat": "Jobs Waiting",
            "refId": "A"
          },
          {
            "expr": "queue_jobs_active{service=\"walmart-nlp-queue\"}",
            "legendFormat": "Jobs Active",
            "refId": "B"
          },
          {
            "expr": "queue_jobs_completed{service=\"walmart-nlp-queue\"}",
            "legendFormat": "Jobs Completed",
            "refId": "C"
          }
        ]
      },
      {
        "id": 9,
        "title": "Error Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"walmart-services\",status_code=~\"5..\"}[5m])",
            "legendFormat": "{{instance}} 5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"walmart-services\",status_code=~\"4..\"}[5m])",
            "legendFormat": "{{instance}} 4xx Errors",
            "refId": "B"
          }
        ]
      },
      {
        "id": 10,
        "title": "WebSocket Connections",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "websocket_connections_active{service=\"walmart-websocket\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "websocket_messages_sent{service=\"walmart-websocket\"}",
            "legendFormat": "Messages Sent",
            "refId": "B"
          }
        ]
      }
    ]
  }
}