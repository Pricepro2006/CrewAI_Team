[Unit]
Description=Redis Local Cache Service
Documentation=https://redis.io/documentation
After=network.target

[Service]
Type=simple
User=pricepro2006
WorkingDirectory=/home/pricepro2006/CrewAI_Team
ExecStart=/usr/bin/redis-server --port 6379 --bind 127.0.0.1 --protected-mode yes --daemonize no
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=3
StandardOutput=journal
StandardError=journal

# Resource limits
MemoryMax=512M
CPUQuota=100%

[Install]
WantedBy=multi-user.target